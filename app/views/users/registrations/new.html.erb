
  <!-- Bootstrap CSS -->
  
  <!-- Navbar section -->
  <header>
    <%= render 'shared/navbar'%>
  </header>
<section>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="sign-main d-flex align-items-center">
    <div class="row sign-form-area mx-auto">
      <div class="col-lg-6 col-md-8 col-sm-12 sign-form p-0">
        <ul class="nav nav-tabs border-0" id="myTab" role="tablist">
          <li class="nav-item sign-in nav-link-inactive" role="presentation">
            <button class="nav-link btn-1 p-0 f-20 mx-auto active border-0" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true"><a class="anchor" href="/users/sign_in">Sign In</a></button>
          </li>
          <li class="nav-item sign-up nav-link-active" role="presentation">
            <button class="nav-link btn-2 p-0 f-20 mx-auto border-0" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false"><a class="anchor"href="/users/sign_up">Sign up</a></p></button>
          </li>
        </ul>
          <div class="sign-up">
            <div class="sign-up-content d-flex flex-column">
              <div class="sign-up-name d-flex justify-content-between">
              <%= f.text_field :first_name, placeholder:"First Name",class:"form-control-1" %>
              <%= f.text_field :last_name, placeholder:"Last Name",class:"form-control-1" %>
              </div>
              <div class="sign-up-name d-flex justify-content-between">
              <%= f.text_field :zip_code, placeholder:"Zip Code",class:"form-control-1" %>
              <%= f.select :country, options_for_select(CS.countries.map{ |c| [c[1], c[1]]}) ,placeholder:"Country",class:"form-control-1" %>
              </div>
              <%= f.email_field :email, placeholder:"Email Address", class:"form-control-1"  %>
              <%= f.password_field :password, placeholder:"New Password",class:"form-control-1" %>
              <%= f.password_field :password_confirmation, placeholder:"Confirm Password" ,class:"form-control-1"%>
            </div>
            <div class="sign-in-button text-center">
                  <%= f.submit "Sign up",class:"btn text-white text-center p-0 f-20 fw-bold", style:"font-size: 20px;" %>
            </div>
            <div class="form-already text-center f-20">
              <p class="m-0 last-text">Already have an account? <a href="/users/sign_in">Sign in</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</section>


<%= javascript_include_tag 'sign'%>

